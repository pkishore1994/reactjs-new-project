name: Continuous Deployment

on:
  push:
    tags:
      - "v*.*.*"  # Trigger on version tags like v1.2.3

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest
    name: Build and Deploy

    steps:
      - name: ‚¨áÔ∏è Checkout repository
        uses: actions/checkout@v3

      - name: üß∞ Setup Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '18'
          registry-url: 'https://registry.npmjs.org'

      - name: üì¶ Install pnpm
        run: npm install -g pnpm

      - name: üì• Install dependencies
        run: pnpm install

      - name: üîß Build project
        run: pnpm run build

      - name: ‚úÖ Verify dist output
        run: ls -la ./dist || echo "dist not found"

      - name: üîê Authenticate with npm
        run: npm config set //registry.npmjs.org/:_authToken=${{ secrets.NPM_TOKEN }}

      - name: üì¶ Check if version already exists
        id: check-version
        run: |
          PKG_NAME=$(node -p "require('./package.json').name")
          PKG_VERSION=$(node -p "require('./package.json').version")
          if npm view "$PKG_NAME@$PKG_VERSION" > /dev/null 2>&1; then
            echo "skip=true" >> $GITHUB_OUTPUT
          else
            echo "skip=false" >> $GITHUB_OUTPUT

      - name: üöÄ Deploy to Azure Static Web Apps (optional)
        uses: Azure/static-web-apps-deploy@v1
        with:
          azure_static_web_apps_api_token: ${{ secrets.AZURE_STATIC_WEB_APPS_API_TOKEN }}
          repo_token: ${{ secrets.GITHUB_TOKEN }}
          action: "upload"
          app_location: "/"
          output_location: "dist"
          environment: "production"

      - name: ‚ÑπÔ∏è Log App Info
        run: |
          echo "App Name: YourAppName"
          echo "App ID: com.example.app"
          echo "Version: ${{ github.ref_name }}"
