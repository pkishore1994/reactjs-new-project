name: Publish Workflow

on:
  workflow_call:
    inputs:
      app_version_android:
        required: true
        type: string
      environment:
        required: true
        type: string
      app_name:
        required: true
        type: string
      app_id:
        required: true
        type: string
      envs:
        required: false
        type: string
    secrets:
      NPM_TOKEN:
        required: true

jobs:
  build-and-publish:
    runs-on: ubuntu-latest

    steps:
      - name: â¬‡ï¸ Checkout repository
        uses: actions/checkout@v3

      - name: ðŸ§° Setup Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '18'
          registry-url: 'https://registry.npmjs.org'

      - name: ðŸ“¦ Install pnpm
        run: npm install -g pnpm

      - name: ðŸ“¥ Install dependencies
        run: pnpm install

      - name: ðŸ”§ Build the library
        run: pnpm run build

      - name: âœ… Verify dist folder
        run: ls -la ./dist || echo "dist folder not found"

      - name: ðŸ” Set up npm auth
        run: npm config set //registry.npmjs.org/:_authToken=${{ secrets.NPM_TOKEN }}

      - name: â›” Check if version already exists
        id: check-version
        run: |
          PKG_NAME=$(node -p "require('./package.json').name")
          PKG_VERSION=$(node -p "require('./package.json').version")
          echo "ðŸ“¦ Checking $PKG_NAME@$PKG_VERSION"
          if npm view "$PKG_NAME@$PKG_VERSION" > /dev/null 2>&1; then
            echo "Version $PKG_VERSION already exists. Skipping publish."
            echo "skip=true" >> $GITHUB_OUTPUT
          else
            echo "skip=false" >> $GITHUB_OUTPUT
          fi

      - name: ðŸš€ Publish to npm
        if: steps.check-version.outputs.skip != 'true'
        run: pnpm publish --no-git-checks
        env:
          NODE_AUTH_TOKEN: ${{ secrets.NPM_TOKEN }}

      - name: âœ… Done
        run: echo "Publish job completed for version ${{ inputs.app_version_android }}"
